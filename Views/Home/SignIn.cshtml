    <script>

        $(document).ready(function () {

            $('#checking').hide();

            $('#bt1').click(function () {

                var userName = $('#Name').val();

                
                $('#checking').show();
              
                $.getJSON("/Home/checkAvailability?Name=" + userName, function (data) {
                    
                    $('#checking').hide();
                    if (data == true) {
                        alert('User Name =' + userName);
                        $('#result').text("User already exists in database");
                    }
                    else {
                        $('#result').text("User Name is available");
                    }
                });

            });

        });
    </script>
        <script>
